<div class="mt-4 container">
    <div class="row justify-content-between">

        <div class="col-lg-3 order-lg-last">
            <h2 class="display-5 fw-bold">Ranking</h2>
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th scope="col">
                            <h4>Rank</h4>
                        </th>
                        <th scope="col">
                            <h4>Username</h4>
                        </th>
                        <th scope="col"></th>
                        <th scope="col">
                            <h4>SAVI</h4>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each user}}
                    <tr>
                        <th scope="row">{{@index}}</th>
                        <td>
                            <h5>{{username}}</h5>
                        </td>
                        <td></td>
                        <td>
                            <h5>{{points}}</h5>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div class="col-lg-8">
            <h2 class="display-5 fw-bold">Maps</h2>
            {{#each data}}
            <div class="p-5 mb-4 bg-light border rounded-3">
                <div class="container-fluid py-5">
                    <div class="row">
                        <div class="col-lg-8 mb-5 mb-lg-0">
                            <h1 class="display-5 fw-bold">{{name}}</h1>
                            <p class="col-md-12 fs-4">{{description}}</p>
                            <a href="/maps/{{id}}/details" class="btn btn-primary btn-lg" type="button">Explore!</a>
                        </div>
                        <div class="col-lg-4">
                            <div data-lat="{{location.coordinates.[0]}}" data-lon="{{location.coordinates.[1]}}"
                                id="thumbnailMap{{@index}}" class="thumbnailMap"></div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>


    </div>
</div>
<script src="/js/theme.js"></script>
<script src="/js/maps.js"></script>
<script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAMzL3s__ul0jf_RCKdh2eRUwJJsQ5ojTo&callback=init"></script>