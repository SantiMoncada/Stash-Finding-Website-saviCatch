<h1>update</h1>
<div class="container mt-5">
    <div class="row" style="justify-content:center">
        <div class="col-md-4">
            <form action="/users/{{user.id}}/update" method="POST">
                <div class="form-row">
                    <div class="form-group mb-3">
                        <label for="name">User name</label>
                        <input type="text" class="form-control" id="name" value="{{user.username}}" name="username">
                    </div>
                    <div class="form-group mb-3">
                        <label for="avatar">Avatar</label>
                        <input type="text" class="form-control" id="avatar" value="{{user.avatar}}" name="avatar">
                    </div>
                    <div class="form-group mb-3">
                        <label for="description">Description</label>
                        <input type="text" class="form-control" id="description" value="{{user.description}}"
                            name="description">
                    </div>

                </div>
                <button type="submit" class="btn btn-secondary">Update</button>
            </form>
        </div>
    </div>
</div>